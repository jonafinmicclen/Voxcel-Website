---
import { Image } from 'astro:assets';
import logo from '@/images/logo.png';

const sections = [
  { id: "about", label: "About Us" }
];
---

<header  >
    <nav class ='h-32 flex flex-row space-x-10 bg-palette-secondary'>
        
        <Image src={logo} alt="Voxcel logo" class="h-full w-auto"/>
        
        {sections.map(({ id, label }) => (
        <a href={`#${id}`} class="text-palette-primary text-xl my-auto font-poppins">{label}</a>
        ))}

    </nav>
</header>   