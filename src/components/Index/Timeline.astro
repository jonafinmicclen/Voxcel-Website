];
---

<!-- Timeline container -->
<div id="timeline" class="py-8 relative">
  <div class="w-full max-w-3xl xl:max-w-6xl mx-auto px-4 relative">

    <!-- Scrollable row -->
    <div class="flex overflow-x-scroll p-4">
      <div class="max-w-"></div>
      {timelineItems.map((item) => (
        <div class="max-w-xs bg-white rounded-lg p-4 flex-shrink-0 transform transition-transform duration-300 ease-in-out hover:scale-105">
          <h3 class="text-xl font-mono font-semibold text-stone-700 mb-2">{item.year}</h3>
          <p class="font-mono text-stone-600">{item.title}</p>
        </div>
      ))}
    </div>

    <!-- Left fade -->
    <div class="pointer-events-none absolute top-0 left-0 h-full w-16 bg-gradient-to-r from-white to-transparent z-10"></div>
    
    <!-- Right fade -->
    <div class="pointer-events-none absolute top-0 right-0 h-full w-16 bg-gradient-to-l from-white to-transparent z-10"></div>
  </div>
</div>
