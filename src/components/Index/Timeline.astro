---
const timelineItems = [
  { year: "2023", title: "Initial research on AI-based cough diagnostics began"},
  { year: "2024", title: "Prototype developed using COPD patient data from clinical collaborations" },
  { year: "2025", title: "Formation of Voxel; pilot trials with clinicians and hospital" },
  { year: "2026", title: "Alpha launch for patient and clinician users" },
  { year: "2027", title: "Expansion to asthma and other pulmonary conditions" },
  { year: "2028", title: "FDA/UKCA clearance submission & commercial B2B partnerships)*" }
];
---

<!-- Timeline container -->
<div id="journey" class="py-8 relative">
  <div class="w-full max-w-3xl xl:max-w-6xl mx-auto px-4 relative">

    <!-- Scrollable row -->
    <div class="mask-alpha mask-r-from-black mask-r-from-90% mask-r-to-transparent mask-l-from-black mask-l-from-90% mask-l-to-transparent flex overflow-x-scroll p-4">
      {timelineItems.map((item) => (
        <div class="max-w-sm rounded-lg p-4 flex-shrink-0 transform transition-transform duration-300 ease-in-out hover:scale-105">
          <h3 class="text-4xl xl:text-xl font-mono font-semibold text-stone-700 mb-2">{item.year}</h3>
          <p class="text-4xl xl:text-base font-mono text-stone-600">{item.title}</p>
        </div>
      ))}
    </div>

  </div>
</div>
