---
const timelineItems = [
  { year: "2020", title: "Timeline test" },
];
---

<div class="overflow-x-auto py-8">
  <div class="flex space-x-8 min-w-max px-4">

    {timelineItems.map((item) => (
      <div class="flex-shrink-0 w-60 bg-white rounded-2xl shadow-md p-4 text-center border">
        <div class="text-xl font-bold text-mono text-indigo-600">{item.year}</div>
        <div class="text-sm mt-2">{item.title}</div>
      </div>
    ))}
    
  </div>
</div>
